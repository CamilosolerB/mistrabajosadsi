{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
<div class="card">
    <div class="card header">
        <h3>Nueva notas</h3>
    </div>
    <div class="card-body">
        <form action="/notes/newnotes" method="post">
            <div class="form-group">
                <label for="">Titulo</label>
                <input type="text" name="title" placeholder="titulo" class="form-control" autofocus>
            </div>
            <div class="form-group">
                <label for="">Contenido</label>
                <textarea name="description" id="contenido" class="form-control" placeholder="Contenido"></textarea>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary btn-block" type="submit">
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>
</div>
